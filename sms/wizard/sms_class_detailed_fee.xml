<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    <!-- Fee Reports -->

        <record id="view_sms_class_detailed_fee_wizard" model="ir.ui.view">
            <field name="name">sms.class.detailed.fee.wizard.form</field>
            <field name="model">sms.class.detailed.fee.wizard</field>
            <field name="arch" type="xml">
                <form string="Student List" version="7.0">
                    <group>
                    <h1><field name="class_id" colspan="4" col="6" readonly="1" nolabel="1"/></h1>
					<newline/>
					<field name="class_form" invisible="1"/>
                    </group>
                     <footer>
                    <button string="Print" name="print_class_fee_details" type="object" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
               </form>
           </field>
          </record>

        <record id="action_print_detailed_fee" model="ir.actions.act_window">
            <field name="name">Print student fee details for this class</field>
            <field name="res_model">sms.class.detailed.fee.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_sms_class_detailed_fee_wizard"/>
           <field name="target">new</field>
        </record>

</data>
</openerp>